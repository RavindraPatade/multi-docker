{
    "AWSEBDockerrunVersion": 2,
    "containerDefinations": [
        {
            "name": "client",
            "image": "ravindrapatade/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "ravindrapatade/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "ravindrapatade/multi-worker",
            "hostname": "worker", 
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "ravindrapatade/multi-nginx",
            "hostname": "nginx", 
            "essential": true,
            "portMapings": [
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"],
            "memory": 128
        }
    ]
}
